@using SoftSupply.Help.Models;

@{
    ViewBag.Title = "Ayuda";
    ViewBag.SubTitle = "Principal";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">Manuales de ayuda creados con el fin de guiar a los usuarios entres las diferentes opciones y configuración de los programas que se muestran a continuación
    </p>
</div>
<div class="row">
    @foreach (var item in MvcApplication.Areas.Where(a => a.Key != "Generic"))
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img alt="@(item.Value.Title)" src="@Html.Holder($"areas/{item.Key}/content/images/logo.svg", 349, 192, theme: "random")">
                <div class="caption">
                    <h3>@(item.Value.Title)</h3>
                    <p>@(item.Value.Description)</p>
                    <p><a href="/@(item.Key)" class="btn btn-default" role="button">Ver &raquo;</a></p>
                </div>
            </div>
        </div>
    }
</div>
