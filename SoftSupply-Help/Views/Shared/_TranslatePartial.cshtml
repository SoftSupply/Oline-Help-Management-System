<div id="google_translate_element"></div>
@this.ScriptBlock(
    @<script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'es', layout: google.translate.TranslateElement.InlineLayout.SIMPLE, gaTrack: true, gaId: '@System.Configuration.ConfigurationManager.AppSettings["gaKey"]' }, 'google_translate_element');
        }
    </script>
)
@this.ScriptBlock(
    @<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    )