<nav class="navbar navbar-inverse navbar-fixed-top">
    <!-- navbar-inverse  -->
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @if (ViewBag.Manifest != null)
            {
                <a class="navbar-brand visible-xs" href="#">
                    <span class="visible-xs">@ViewBag.Manifest.Title</span>
                </a>
                <a class="navbar-brand hidden-xs" href="@($"{ViewBag.Manifest.Name}")" style="padding-top: 8px;">
                    <span>
                        <img alt="" src="@Html.Holder($"areas/{ViewBag.Manifest.Name}/content/img/logo.svg", 64, theme: "random")" height="64" width="64">
                    </span>
                </a>
            }
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="main-navbar-collapse">
            <form class="navbar-form navbar-left hidden-xs" action="Search" method="post" style="padding-left: 0px;">
                <div class="form-group">
                    @*<div class="input-group">*@
                    <input name="area" type="hidden" value="@(ViewBag.Manifest.Name)" />
                    <input name="searchString" type="text" class="form-control" placeholder="Buscar...">
                    @*<span class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </span>*@
                    @*</div>*@
                </div>
            </form>
            <ul class="nav navbar-nav visible-xs">
                @RenderPage("_Sidebar.cshtml")
            </ul>
            @if (ViewBag.Manifest != null)
            {
                <form class="navbar-form navbar-right hidden-xs">
                    <div class="form-group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-success">@ViewBag.Manifest.Title</button>
                            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                @foreach (var item in MvcApplication.Areas.Where(a => a.Key != "Generic" || !MvcApplication.Areas.Any()))
                                {
                                    <li>@Html.ActionLink(item.Value.Title, "", new { Area = item.Key })</li>
                                }
                            </ul>
                        </div>
                    </div>
                </form>
            }
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>